<Page
    x:Class="AntiSwearingChatBox.WPF.View.SimpleChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:AntiSwearingChatBox.WPF.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Chat - Anti-Swearing Chat Box"
    Background="{StaticResource PrimaryBackgroundBrush}"
    FontFamily="Segoe UI"
    Loaded="Page_Loaded"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{StaticResource PrimaryTextBrush}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:MessageBackgroundConverter x:Key="MessageBackgroundConverter" />
        <converters:MessageForegroundConverter x:Key="MessageForegroundConverter" />
        <converters:MessageBorderThicknessConverter x:Key="MessageBorderThicknessConverter" />
        <converters:MessageAlignmentConverter x:Key="MessageAlignmentConverter" />
        <converters:BoolToColumnConverter x:Key="BoolToColumnConverter" />
        <converters:FirstCharConverter x:Key="FirstCharConverter" />
        <converters:SwearingScoreToColorConverter x:Key="SwearingScoreToColorConverter" />
        <converters:BoolToTextConverter x:Key="BoolToTextConverter" />
        <converters:ClampValueConverter x:Key="ClampValueConverter" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image
            Opacity="0.4"
            Source="/Resources/LoginPage/bg.png"
            Stretch="UniformToFill" />
        <Border Background="#080808" Opacity="0.9" />
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Sidebar with Conversation List  -->
            <Border
                Grid.Column="0"
                Background="Transparent"
                BorderBrush="{StaticResource BorderBrush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="68" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  User Display Section  -->
                    <Border
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="16,12,16,0"
                        Padding="16,8"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        CornerRadius="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                Background="{StaticResource SpecialBrush}"
                                CornerRadius="14">
                                <TextBlock
                                    x:Name="UserInitials"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="U" />
                            </Border>
                            <TextBlock
                                x:Name="UserDisplayName"
                                Grid.Column="1"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="User" />

                            <!--  Connection Status Indicator  -->
                            <StackPanel
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <Ellipse
                                    x:Name="ConnectionIndicator"
                                    Width="10"
                                    Height="10"
                                    Margin="0,0,5,0"
                                    Fill="Green" />
                                <TextBlock
                                    x:Name="ConnectionStatusText"
                                    FontSize="10"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Text="Connected" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Search Bar  -->
                    <Border
                        Grid.Row="1"
                        Height="80"
                        Margin="0,0,0,0"
                        Padding="16,12"
                        Background="Transparent">
                        <Border
                            Padding="0"
                            Background="{StaticResource SecondaryBackgroundBrush}"
                            CornerRadius="3">
                            <Border>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="24"
                                        Height="24"
                                        Margin="8,8,0,8"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource TertiaryTextBrush}"
                                        Kind="Magnify" />
                                    <TextBox
                                        x:Name="SearchBox"
                                        Grid.Column="1"
                                        Margin="8,8,12,8"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Search conversations"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        CaretBrush="{StaticResource PrimaryGreenBrush}"
                                        FontSize="13"
                                        Foreground="{StaticResource SecondaryTextBrush}"
                                        TextChanged="SearchBox_TextChanged" />
                                </Grid>
                            </Border>
                        </Border>
                    </Border>

                    <!--  Conversation List  -->
                    <ScrollViewer
                        Grid.Row="2"
                        Margin="16,0,16,8"
                        Padding="0,0,0,8"
                        VerticalScrollBarVisibility="Hidden">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <TextBlock
                                    FontSize="11"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource TertiaryTextBrush}"
                                    Text="CONVERSATIONS" />
                            </Grid>
                            <!--  Conversations  -->
                            <ItemsControl x:Name="ConversationsItemsControl" ItemsSource="{Binding Conversations}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            x:Name="ConversationItemBorder"
                                            Margin="4,3"
                                            Padding="12,12"
                                            Background="{Binding Background, FallbackValue={StaticResource SecondaryBackgroundBrush}}"
                                            BorderBrush="{Binding BorderBrush, FallbackValue={StaticResource BorderBrush}}"
                                            BorderThickness="{Binding BorderThickness, FallbackValue=0}"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="ConversationItem_MouseLeftButtonDown"
                                            Tag="{Binding Id}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--  Avatar  -->
                                                <Border
                                                    Width="42"
                                                    Height="42"
                                                    Margin="0,0,12,0"
                                                    Background="{StaticResource TertiaryBackgroundBrush}"
                                                    CornerRadius="14">
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontSize="16"
                                                        FontWeight="SemiBold"
                                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                                        Text="{Binding Avatar}" />
                                                </Border>

                                                <Grid Grid.Column="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <!--  Title with Closed Indicator  -->
                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Orientation="Horizontal">
                                                        <TextBlock
                                                            FontSize="14"
                                                            FontWeight="SemiBold"
                                                            Foreground="{StaticResource PrimaryTextBrush}"
                                                            Text="{Binding Title}" />
                                                    </StackPanel>

                                                    <!--  Last Message Time  -->
                                                    <TextBlock
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        FontSize="11"
                                                        Foreground="{StaticResource TertiaryTextBrush}"
                                                        Text="{Binding LastMessageTime}" />
                                                    <!--  Last Message and Swearing Score  -->
                                                    <Grid
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2"
                                                        Margin="0,4,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <!--  Last Message  -->
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            MaxHeight="32"
                                                            FontSize="12"
                                                            Foreground="{StaticResource SecondaryTextBrush}"
                                                            Text="{Binding LastMessage}"
                                                            TextTrimming="CharacterEllipsis"
                                                            TextWrapping="Wrap" />

                                                        <!--  Swearing Score Indicator  -->
                                                        <Border
                                                            Grid.Column="1"
                                                            Width="24"
                                                            Height="24"
                                                            Margin="4,0,0,0"
                                                            Background="{Binding SwearingScore, Converter={StaticResource SwearingScoreToColorConverter}}"
                                                            CornerRadius="12"
                                                            Visibility="{Binding SwearingScore, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <TextBlock
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                FontSize="10"
                                                                FontWeight="Bold"
                                                                Foreground="White"
                                                                Text="{Binding SwearingScore}" />
                                                        </Border>

                                                        <!--  Closed Indicator  -->
                                                        <TextBlock
                                                            Margin="6,0,0,0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="14"
                                                            FontWeight="Bold"
                                                            Foreground="#F44336"
                                                            Text="ðŸ”’"
                                                            Visibility="{Binding IsClosed, Converter={StaticResource BoolToVisibilityConverter}}" />
                                                    </Grid>

                                                    <!--  Unread Count  -->
                                                    <Border
                                                        Grid.Row="2"
                                                        Grid.Column="1"
                                                        Width="22"
                                                        Height="22"
                                                        Margin="0,4,0,0"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Background="{StaticResource PrimaryGreenBrush}"
                                                        CornerRadius="11"
                                                        Visibility="{Binding HasUnread, Converter={StaticResource BoolToVisibilityConverter}}">
                                                        <TextBlock
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            FontSize="10"
                                                            FontWeight="Bold"
                                                            Foreground="White"
                                                            Text="{Binding UnreadCount}" />
                                                    </Border>
                                                </Grid>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>

                    <!--  Bottom Actions  -->
                    <Border
                        Grid.Row="3"
                        Grid.ColumnSpan="2"
                        Padding="16,12"
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,0">
                        <StackPanel>
                            <Button
                                x:Name="NewChatButton"
                                Margin="0,0,0,8"
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Click="NewChat_Click"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="Plus" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="New Chat" />
                                </Grid>
                            </Button>

                            <!--  AI Test Tool Button  -->
                            <Button
                                x:Name="AITestButton"
                                Margin="0,0,0,8"
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Click="AITest_Click"
                                Cursor="Hand">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="#8C52FF"
                                        Kind="RobotOutline" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="AI Test Tool" />
                                </Grid>
                            </Button>

                            <!--  Admin Dashboard Button  -->
                            <Button
                                x:Name="AdminDashboardButton"
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                Background="{StaticResource SecondaryBackgroundBrush}"
                                BorderThickness="0"
                                Click="AdminDashboard_Click"
                                Cursor="Hand"
                                Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        VerticalAlignment="Center"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="ShieldAccount" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="Admin Dashboard" />
                                </Grid>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!--  Main Chat Area  -->
            <Grid Grid.Column="1">
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="68" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Chat Header  -->
                    <Border
                        Grid.Row="0"
                        Margin="0,12,16,0"
                        Padding="16,8,8,8"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        CornerRadius="3"
                        Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Contact Avatar  -->
                            <Border
                                Width="36"
                                Height="36"
                                Margin="0,0,12,0"
                                Background="{StaticResource SpecialBrush}"
                                CornerRadius="14">
                                <TextBlock
                                    x:Name="ContactAvatarText"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="{Binding CurrentContactName, Converter={StaticResource FirstCharConverter}, FallbackValue=?}" />

                                <!--  Online Status Indicator  -->
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="4"
                                        Opacity="0.3"
                                        ShadowDepth="0"
                                        Color="#000000" />
                                </Border.Effect>
                            </Border>

                            <!--  Online Indicator  -->
                            <Border
                                Width="9"
                                Height="9"
                                Margin="0,0,12,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Background="#47D068"
                                BorderBrush="White"
                                BorderThickness="1.5"
                                CornerRadius="4.5">
                                <Border.Effect>
                                    <DropShadowEffect
                                        BlurRadius="3"
                                        Opacity="0.3"
                                        ShadowDepth="0"
                                        Color="#000000" />
                                </Border.Effect>
                            </Border>

                            <!--  Contact Info  -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock
                                    x:Name="ContactNameDisplay"
                                    FontSize="15"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource PrimaryTextBrush}"
                                    Text="{Binding CurrentContactName}" />

                                <TextBlock
                                    x:Name="ContactOnlineStatus"
                                    Margin="0,2,0,0"
                                    FontSize="11"
                                    Foreground="{StaticResource SecondaryTextBrush}">
                                    <Run Text="{Binding CurrentContactName}" />
                                    <Run Text="online now" />
                                </TextBlock>
                            </StackPanel>

                            <!--  Swearing Score  -->
                            <Border
                                Grid.Column="2"
                                Width="120"
                                Height="40"
                                Margin="8,0"
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Background="{StaticResource TertiaryBackgroundBrush}"
                                BorderBrush="{Binding SwearingScore, Converter={StaticResource SwearingScoreToColorConverter}, FallbackValue={StaticResource BorderBrush}}"
                                BorderThickness="2"
                                CornerRadius="3">
                                <Grid>
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource SecondaryTextBrush}"
                                            Text="Swearing: " />
                                        <TextBlock FontSize="13" FontWeight="Bold">
                                            <Run Foreground="{Binding SwearingScore, Converter={StaticResource SwearingScoreToColorConverter}, FallbackValue={StaticResource TertiaryTextBrush}}" Text="{Binding SwearingScore, FallbackValue=0}" />
                                            <Run Foreground="{StaticResource TertiaryTextBrush}" Text="/5" />
                                        </TextBlock>
                                    </StackPanel>

                                    <!--  Severity Indicator - This gets clamped for visual representation  -->
                                    <ProgressBar
                                        Width="110"
                                        Height="4"
                                        Margin="0,22,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        Background="#EEEEEE"
                                        Foreground="{Binding SwearingScore, Converter={StaticResource SwearingScoreToColorConverter}, FallbackValue={StaticResource TertiaryTextBrush}}"
                                        Maximum="5"
                                        Value="{Binding SwearingScore, FallbackValue=0, Converter={StaticResource ClampValueConverter}}" />
                                </Grid>
                            </Border>

                            <!--  Swearing Warning Notification  -->
                            <Border
                                x:Name="SwearingWarningBorder"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Margin="8,0,130,0"
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="#FFECB3"
                                BorderBrush="#FFC107"
                                BorderThickness="1"
                                CornerRadius="3"
                                Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="#FF6D00"
                                        Text="âš ï¸ " />
                                    <TextBlock
                                        x:Name="SwearingWarningText"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Foreground="#FF6D00"
                                        Text="Inappropriate language detected. Please be respectful." />
                                </StackPanel>
                            </Border>

                            <!--  Action Buttons  -->
                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <Button
                                    Margin="2,0"
                                    Click="CallButton_Click"
                                    Style="{StaticResource WindowBarButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="Phone" />
                                </Button>

                                <Button
                                    Margin="2,0"
                                    Click="VideoCallButton_Click"
                                    Style="{StaticResource WindowBarButtonStyle}">
                                    <materialDesign:PackIcon
                                        Width="16"
                                        Height="16"
                                        Foreground="{StaticResource PrimaryGreenBrush}"
                                        Kind="Video" />
                                </Button>

                                <Button
                                    Margin="2,0"
                                    Click="MenuButton_Click"
                                    Style="{StaticResource WindowBarButtonStyle}">
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="{StaticResource PrimaryTextBrush}"
                                        Text="â‹®" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--  Empty State - No Conversation Selected  -->
                    <Grid
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Background="Transparent"
                        Visibility="{Binding HasSelectedConversation, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <StackPanel
                            MaxWidth="400"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                            <materialDesign:PackIcon
                                Width="64"
                                Height="64"
                                Margin="0,0,0,16"
                                HorizontalAlignment="Center"
                                Foreground="{StaticResource SecondaryTextBrush}"
                                Kind="ChatOutline" />
                            <TextBlock
                                Margin="0,0,0,8"
                                HorizontalAlignment="Center"
                                FontSize="24"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource PrimaryTextBrush}"
                                Text="Select a conversation" />
                            <TextBlock
                                Margin="0,0,0,24"
                                FontSize="14"
                                Foreground="{StaticResource SecondaryTextBrush}"
                                Text="Choose an existing conversation from the list or start a new chat to begin messaging."
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                            <Button
                                Width="200"
                                HorizontalAlignment="Center"
                                Click="NewChat_Click"
                                Content="New Conversation"
                                Style="{StaticResource PrimaryButtonStyle}" />
                        </StackPanel>
                    </Grid>

                    <!--  Messages List  -->
                    <Grid Grid.Row="1">
                        <ScrollViewer
                            x:Name="MessagesScroll"
                            Margin="0,8,0,8"
                            Padding="0,12"
                            VerticalScrollBarVisibility="Hidden"
                            Visibility="{Binding HasSelectedConversation, Converter={StaticResource BoolToVisibilityConverter}}">
                            <ItemsControl x:Name="MessagesList" ItemsSource="{Binding Messages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="16,6">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Avatar (for received messages)  -->
                                            <Border
                                                Grid.Column="0"
                                                Width="36"
                                                Height="36"
                                                Margin="0,0,8,0"
                                                Background="{StaticResource TertiaryBackgroundBrush}"
                                                BorderThickness="0"
                                                CornerRadius="14"
                                                Visibility="{Binding IsSent, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                                <TextBlock
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource PrimaryGreenBrush}"
                                                    Text="{Binding Avatar}" />
                                            </Border>

                                            <!--  Message Bubble  -->
                                            <Border
                                                Grid.Column="{Binding IsSent, Converter={StaticResource BoolToColumnConverter}, ConverterParameter=1:1}"
                                                MaxWidth="600"
                                                Padding="12,8"
                                                HorizontalAlignment="{Binding IsSent, Converter={StaticResource MessageAlignmentConverter}}"
                                                Background="{Binding IsSent, Converter={StaticResource MessageBackgroundConverter}}"
                                                BorderBrush="{StaticResource MatchaGreenBrush}"
                                                BorderThickness="{Binding IsSent, Converter={StaticResource MessageBorderThicknessConverter}}"
                                                CornerRadius="12"
                                                MouseLeftButtonDown="MessageBubble_MouseLeftButtonDown"
                                                Tag="{Binding}">
                                                <Grid>
                                                    <StackPanel>
                                                        <TextBlock
                                                            FontSize="14"
                                                            Foreground="{Binding IsSent, Converter={StaticResource MessageForegroundConverter}}"
                                                            Text="{Binding DisplayText}"
                                                            TextWrapping="Wrap" />

                                                        <!--  Adjusted layout to prevent overlapping  -->
                                                        <Grid Margin="0,4,0,0">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="Auto" />
                                                                <RowDefinition Height="Auto" />
                                                            </Grid.RowDefinitions>

                                                            <!--  Warning message in its own row  -->
                                                            <StackPanel
                                                                Grid.Row="0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Bottom"
                                                                Orientation="Horizontal"
                                                                Visibility="{Binding ContainsProfanity, Converter={StaticResource BoolToVisibilityConverter}}">
                                                                <TextBlock
                                                                    VerticalAlignment="Bottom"
                                                                    FontSize="11"
                                                                    Foreground="#FF4D4D"
                                                                    Text="âš ï¸ Warning" />

                                                                <TextBlock
                                                                    Margin="4,0,0,0"
                                                                    FontSize="11"
                                                                    Foreground="{StaticResource TertiaryTextBrush}"
                                                                    Text="{Binding IsUncensored, Converter={StaticResource BoolToTextConverter}, ConverterParameter=Uncensored:Click to reveal}" />
                                                                <TextBlock
                                                                    Grid.Row="1"
                                                                    Margin="4,0,0,0"
                                                                    HorizontalAlignment="Right"
                                                                    FontSize="11"
                                                                    Foreground="{StaticResource TertiaryTextBrush}"
                                                                    Text="{Binding Timestamp}" />
                                                            </StackPanel>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <!--  Avatar (for sent messages)  -->
                                            <Border
                                                Grid.Column="2"
                                                Width="36"
                                                Height="36"
                                                Margin="8,0,0,0"
                                                Background="{StaticResource TertiaryBackgroundBrush}"
                                                BorderThickness="0"
                                                CornerRadius="14"
