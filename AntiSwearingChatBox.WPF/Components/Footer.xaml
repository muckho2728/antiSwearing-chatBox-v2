<UserControl x:Class="AntiSwearingChatBox.WPF.Components.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Height="Auto" Width="Auto">
    <StackPanel Margin="40,0,0,24">
        <Separator Background="#1E1E1E" Margin="0,0,0,16"/>
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="© 2025 Anti-Swearing Chat Box" Foreground="#616161" FontSize="11"/>
                <TextBlock Text="•" Foreground="#616161" FontSize="11" Margin="8,0"/>
                <TextBlock Text="Privacy Policy" Foreground="#909090" FontSize="11"/>
                <TextBlock Text="•" Foreground="#616161" FontSize="11" Margin="8,0"/>
                <TextBlock Text="Terms of Service" Foreground="#909090" FontSize="11"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,40,0">
                <materialDesign:PackIcon Kind="ShieldCheck" Width="12" Height="12" Foreground="#BCD9B4" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBlock Text="Protected by AI Moderation" Foreground="#BCD9B4" FontSize="11" VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
