<UserControl x:Class="AntiSwearingChatBox.WPF.Components.Register"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
             Height="Auto"
             Width="400">
    
    <Border Background="{StaticResource PrimaryBackgroundBrush}" CornerRadius="0">
        <!-- Form Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Green Accent Bar -->
            <Border Height="4" Background="{StaticResource PrimaryGreenBrush}" VerticalAlignment="Top"/>
            
            <!-- Form Content -->
            <ScrollViewer VerticalScrollBarVisibility="Hidden" Margin="0,0,0,0" Padding="0,0,0,0" Grid.Row="1">
                <StackPanel Width="320" Margin="0,40,0,40" HorizontalAlignment="Center">
                    <!-- Logo Placeholder -->

                    <TextBlock Text="Create Account" Style="{StaticResource HeadingTextStyle}" FontSize="36" Margin="0,0,0,8"/>
                    <TextBlock Text="Join our community today! Please fill in your details below." Style="{StaticResource BodyTextStyle}" Margin="0,0,0,32" TextWrapping="Wrap"/>

                    <!-- Username Input -->
                    <TextBox x:Name="txtUsername" Style="{StaticResource StandardInputStyle}"
                         materialDesign:HintAssist.Hint="Username"
                         materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <!-- Email Input -->
                    <TextBox x:Name="txtEmail" Style="{StaticResource StandardInputStyle}"
                         materialDesign:HintAssist.Hint="Email Address"
                         materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <!-- Password Input -->
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource StandardPasswordStyle}"
                             materialDesign:HintAssist.Hint="Password"/>

                    <!-- Password Strength Indicator -->
                    <Grid Margin="0,4,0,12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Strength Bar -->
                        <Grid Grid.Row="0" Height="4" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="strengthBar1" Grid.Column="0" Background="#333333" CornerRadius="2,0,0,2"/>
                            <Border x:Name="strengthBar2" Grid.Column="1" Background="#333333"/>
                            <Border x:Name="strengthBar3" Grid.Column="2" Background="#333333"/>
                            <Border x:Name="strengthBar4" Grid.Column="3" Background="#333333" CornerRadius="0,2,2,0"/>
                        </Grid>

                        <!-- Strength Text -->
                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock Text="Password Strength: " Foreground="{StaticResource SecondaryTextBrush}" FontSize="11"/>
                            <TextBlock x:Name="passwordStrengthText" Text="None" Foreground="{StaticResource SecondaryTextBrush}" FontSize="11" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <!-- Confirm Password -->
                    <PasswordBox x:Name="txtConfirmPassword" Style="{StaticResource StandardPasswordStyle}"
                             materialDesign:HintAssist.Hint="Confirm Password"/>

                    <!-- Terms & Conditions -->
                    <CheckBox Content="I agree to the terms and privacy policy" Foreground="{StaticResource TertiaryTextBrush}" FontSize="13"
                          BorderBrush="{StaticResource PrimaryGreenBrush}" Background="Transparent" Margin="0,16,0,0"/>

                    <!-- Register Button -->
                    <Button x:Name="btnRegister" Content="Create Account" Style="{StaticResource PrimaryButtonStyle}"/>

                    <!-- Login Link -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,28,0,0">
                        <TextBlock Text="Already have an account?" Foreground="{StaticResource TertiaryTextBrush}" FontSize="13"/>
                        <TextBlock x:Name="btnLogin" Text="Sign in" Style="{StaticResource LinkTextStyle}" 
                               FontSize="13" Margin="6,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
