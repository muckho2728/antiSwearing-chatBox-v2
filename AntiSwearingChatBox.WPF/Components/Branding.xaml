<UserControl x:Class="AntiSwearingChatBox.WPF.Components.Branding"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AntiSwearingChatBox.WPF.Components"
             Height="Auto"
             Width="Auto">


    <Grid>
        <Image Source="/Resources/LoginPage/bg.png" Stretch="UniformToFill" Opacity="0.4"/>
        <Border Background="#121212" Opacity="0.85"/>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Logo Section -->
            <StackPanel Grid.Row="0" Margin="60,20,0,0" HorizontalAlignment="Left">
                <TextBlock Text="Anti-Swearing" FontSize="18" FontWeight="Bold" Foreground="#F8F5FF"/>
                <TextBlock Text="ChatBox" FontSize="18" FontWeight="Bold" Foreground="#47D068"/>
            </StackPanel>

            <!-- Center Decorative Elements -->
            <Grid Grid.Row="1" Margin="60,0,60,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Main Heading -->
                <StackPanel Grid.Row="0" VerticalAlignment="Center">
                    <TextBlock Text="Chat Safe." FontSize="38" FontWeight="Bold" Foreground="#F8F5FF" Margin="0,0,0,8"/>
                    <TextBlock Text="Chat Smart." FontSize="38" FontWeight="Bold" Foreground="#F8F5FF" Margin="0,0,0,8"/>
                    <TextBlock Text="Chat Clean." FontSize="38" FontWeight="Bold" Foreground="#47D068" Margin="0,0,0,24"/>

                    <TextBlock Text="Experience the next level of communication with our advanced anti-swearing technology." 
                                   FontSize="16" Foreground="#999999" TextWrapping="Wrap" MaxWidth="520" LineHeight="24" HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Decorative Cards -->
                <Grid Grid.Row="1" Margin="0,40,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Card 1 -->
                    <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="12" Margin="0,0,16,0" Height="220">
                        <Grid>
                            <Border Height="8" Background="#47D068" VerticalAlignment="Top" CornerRadius="12,12,0,0"/>
                            <StackPanel Margin="24,32,24,24">
                                <Border Width="48" Height="48" Background="#47D068" CornerRadius="24" Opacity="0.2" HorizontalAlignment="Left"/>
                                <TextBlock Text="AI Powered" FontSize="20" FontWeight="Bold" Foreground="#F8F5FF" Margin="0,16,0,8"/>
                                <TextBlock Text="Our advanced AI technology filters out inappropriate language in real-time." 
                                              FontSize="14" Foreground="#999999" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Card 2 -->
                    <Border Grid.Column="1" Background="#1A1A1A" CornerRadius="12" Margin="8,0,8,0" Height="220">
                        <Grid>
                            <Border Height="8" Background="#A280FF" VerticalAlignment="Top" CornerRadius="12,12,0,0"/>
                            <StackPanel Margin="24,32,24,24">
                                <Border Width="48" Height="48" Background="#A280FF" CornerRadius="24" Opacity="0.2" HorizontalAlignment="Left"/>
                                <TextBlock Text="Real-time Filtering" FontSize="20" FontWeight="Bold" Foreground="#F8F5FF" Margin="0,16,0,8"/>
                                <TextBlock Text="Messages are instantly filtered to ensure a positive chat environment for all users." 
                                              FontSize="14" Foreground="#999999" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Card 3 -->
                    <Border Grid.Column="2" Background="#1A1A1A" CornerRadius="12" Margin="16,0,0,0" Height="220">
                        <Grid>
                            <Border Height="8" Background="#666666" VerticalAlignment="Top" CornerRadius="12,12,0,0"/>
                            <StackPanel Margin="24,32,24,24">
                                <Border Width="48" Height="48" Background="#666666" CornerRadius="24" Opacity="0.2" HorizontalAlignment="Left"/>
                                <TextBlock Text="Secure and Private" FontSize="20" FontWeight="Bold" Foreground="#F8F5FF" Margin="0,16,0,8"/>
                                <TextBlock Text="Your conversations are encrypted and secure, with privacy as our top priority." 
                                              FontSize="14" Foreground="#999999" TextWrapping="Wrap" LineHeight="20"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
    
</UserControl>
